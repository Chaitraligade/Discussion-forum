<%= form_with(model: @discussion_thread, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="field">
  <%= f.label :category_id, "Category" %>
  <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "Select a category" %>
</div>

  
  <div class="field">
  <%= label_tag :tag_list, "Tags (comma-separated)" %>
  <%= text_field_tag :tag_list, @discussion_thread.tag_list.join(", "), class: "form-control" %>
</div>

  <%= form.submit "Create Thread", class: "btn btn-primary" %>
<% end %>
<%= link_to "Back to Threads", discussion_threads_path %>