<div style="max-width: 900px; margin: 30px auto; background: #fff; padding: 30px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.1); font-family: sans-serif;">

  <div style="display: flex; justify-content: space-between; align-items: center;">
    <h1>User Profile</h1>
    <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-warning", style: "padding: 10px 15px; background-color: #ffc107; border: none; border-radius: 5px; text-decoration: none; color: #000;" %>
  </div>

  <hr>

  <div style="display: flex; gap: 30px;">
    <!-- Left: Profile Photo -->
    <div>
      <% if @user.profile_photo.attached? %>
        <%= image_tag @user.profile_photo, width: 200, height: 200, style: "border-radius: 10px; object-fit: cover;" %>
      <% else %>
        <p><em>No profile photo uploaded</em></p>
      <% end %>
    </div>

    <!-- Right: Info -->
    <div style="flex: 1;">
      <p><strong>Username:</strong> <%= @user.username %></p>
      <p><strong>Email:</strong> <%= @user.email %></p>
      <p><strong>Bio:</strong> <%= @user.bio.present? ? @user.bio : "No bio available" %></p>
      <p><strong>Role:</strong> <%= @user.role.capitalize %></p>
      <p><strong>Joined On:</strong> <%= @user.created_at.strftime("%B %d, %Y") %></p>
    </div>
  </div>
</div>
