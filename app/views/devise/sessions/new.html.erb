<% provide(:title, "Login") %>

<div class="login-wrapper">
  <div class="login-box">
    <h2>Login</h2>
    <p class="subtitle">Access your account to join the discussion</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email -->
      <div class="form-group">
        <%= f.label :email, "Email Address" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <!-- Password -->
      <div class="form-group">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <!-- Remember Me & Forgot Password -->
      <div class="options">
        <% if devise_mapping.rememberable? %>
          <label class="remember-me">
            <%= f.check_box :remember_me %> Remember me
          </label>
        <% end %>
        <%= link_to "Forgot Password?", new_password_path(resource_name), class: "forgot-password" %>
      </div>

      <!-- Submit Button -->
      <div class="form-group">
        <%= f.submit "Login", class: "btn-login" %>
      </div>
    <% end %>

    <!-- Sign Up Link -->
    <p class="signup-text">New here? <%= link_to "Sign Up", new_registration_path(resource_name) %></p>
  </div>
</div>
